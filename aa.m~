clear all; close all; clc

delta =180/20;
phi   = -180 : delta : 180;
theta = -pi/2 : delta : pi/2;
x0 = 0; y0 = 0; z0 = 0;
r = 1;
[phi,theta] = meshgrid(phi,theta);
F = -cos(phi)-cos(2*theta);

x = x0 + r.*cos(theta).*cos(phi);
y = y0 + r.*cos(theta).*sin(phi);
z = z0 + r.*sin(theta);
X = x./(r-z);
Y = y./(r-z);

surf(X,Y,F); light; axis('equal'); %axis off;
hold on
plot3(-1,0,2,'r*')
plot3(1,0,-2,'b*')

% axis([-2,0,-1,1])
view(30,20) %box